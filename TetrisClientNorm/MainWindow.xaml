<Window x:Class="TetrisClientNorm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisClientNorm"
        mc:Ignorable="d"
        Title="Tetris Client-Server" Height="700" Width="600"
        MinHeight="700" MinWidth="600"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI Light" FontSize="28">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="Assets/Back.jpg"></ImageBrush>
        </Grid.Background>

        <Viewbox Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,0,0,20">
            <Canvas x:Name="GameCanvas"
                Background="Black"
                ClipToBounds="True"
                Loaded="GameCanvas_OnLoaded"/>
        </Viewbox>

        <TextBlock x:Name="ScoreTest"
                   Grid.Row="0"
                   Grid.Column="1"
                   TextAlignment="Center" Text="Очки: 0"/>

        <StackPanel Grid.Row="1"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">
            <TextBlock Text="След" TextAlignment="Center"></TextBlock>
            <Image x:Name="NextImage"
                   Margin="20"
                   Width="125"></Image>
        </StackPanel>

        <Grid x:Name="GameOverMenu"
                        Background="#CC000000"
                        Grid.RowSpan="2"
                        Grid.ColumnSpan="3"
                        Visibility="Hidden">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Конец игры"
                           FontSize="48"
                           Foreground="AliceBlue"
                           TextAlignment="Center"/>
                <TextBlock x:Name="FinalScore"
                           Text="Очки: "
                           FontSize="36"
                           Foreground="AliceBlue"
                           TextAlignment="Center"/>
                <Button Content="Играть заново"
                        Background="LightGreen"
                        Margin="0, 20, 0, 0"
                        Padding="5"
                        Click="ButtonBase_OnClick"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="StartMenu"
              Background="#CC000000"
              Grid.RowSpan="2"
              Grid.ColumnSpan="3"
              Visibility="Visible">

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="400">
                <Button Content="Играть"
                        Background="LightGreen"
                        Padding="15"
                        Click="StartGameButton_OnClick"/>
                <Button Content="Настройки"
                        Background="LightGreen"
                        Padding="15"
                        Click="SettingButton_OnClick"
                        Margin="0, 50, 0, 0"/>
                <Button Content="Выход"
                        Background="LightGreen"
                        Padding="15"
                        Click="StartGameButton_OnClick"
                        Margin="0, 50, 0, 0"/>
            </StackPanel>

        </Grid>

        <Grid x:Name="SettingMenu"
              Background="#FF000000"
              Grid.RowSpan="2"
              Grid.ColumnSpan="3"
              Visibility="Hidden">

            <Grid HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0, 70, 0, 0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Foreground="AliceBlue"
                           TextAlignment="Center" 
                           Text="Настройки"
                           FontSize="40"
                           Grid.Row="0"/>

  
                <Grid Grid.Row="2">

                    <Grid>
                       
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="20"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="125"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.ColumnSpan="2"
                                       Foreground="AliceBlue"
                                       TextAlignment="Center" 
                                       Text="Ввести адрес сервера"
                                       FontSize="20"
                                       Margin="0, 0, 0 ,10"/>

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Foreground="AliceBlue"
                                       Text="Адрес"
                                       FontSize="16"/>

                            <TextBlock Grid.Row="1"
                                       Grid.Column="1" 
                                       Foreground="AliceBlue"
                                       Text="Порт"
                                       FontSize="16"/>

                            <TextBox Height="20" 
                                     Grid.Row="2" 
                                     Grid.Column="0"/>

                            <TextBox Grid.Row="2" 
                                     Grid.Column="1"></TextBox>
                        </Grid>

                        <Grid Grid.Row="1"
                              Margin="0, 20, 0, 0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Button Content="Поиск сервера"
                                    Background="LightGray"
                                    Padding="5"
                                    Click="FindServer"
                                    Grid.Row="0"/>

                            <ListView Name="ServerAddresses" 
                                      SelectionChanged="ServerAddresses_OnSelectionChanged" 
                                      FontSize="16"
                                      Margin="0, 5, 0, 0"
                                      Grid.Row="1">

                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="125" DisplayMemberBinding="{Binding Path=IpAddress}">Адрес сервера</GridViewColumn>
                                        <GridViewColumn Width="75" DisplayMemberBinding="{Binding Path=Port}">Порт</GridViewColumn>
                                    </GridView>
                                </ListView.View>

                            </ListView>
                        </Grid>

                        <Grid Grid.Row="2"
                              Margin="0, 20, 0, 0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
              

                            <TextBlock Grid.Row="0"
                                       Grid.ColumnSpan="3"
                                       Foreground="AliceBlue"
                                       TextAlignment="Center" 
                                       Text="Выбрать размер поля"
                                       FontSize="20"/>

                            <Grid Grid.Row="1"
                                  Margin="0, 20, 0, 0">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <RadioButton Content="Маленькое"
                                             Grid.Column="0"
                                             VerticalAlignment="Center"
                                             Foreground="AliceBlue"
                                             FontSize="10"
                                             Name="s"
                                             Checked="ToggleButton_OnChecked"
                                             IsChecked="True"/>
                                <RadioButton Content="Среднее"
                                             Grid.Column="1"
                                             VerticalAlignment="Center"
                                             Foreground="AliceBlue"
                                             Name="m"
                                             FontSize="10"
                                             Checked="ToggleButton_OnChecked"/>
                                <RadioButton Content="Большое"
                                             Grid.Column="2"
                                             VerticalAlignment="Center"
                                             Foreground="AliceBlue"
                                             Name="l"
                                             FontSize="10"
                                             Checked="ToggleButton_OnChecked"/>
                            </Grid>
                        </Grid>


                    </Grid>
                </Grid>

                
                

                
               
                <Button Content="Назад"
                        Background="LightGreen"
                        Padding="5"
                        VerticalAlignment="Bottom"
                        Click="BackButton_OnClick"
                        Grid.Row="6"/>
            </Grid>

        </Grid>
    </Grid>
</Window>
