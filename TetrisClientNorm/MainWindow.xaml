<Window x:Class="TetrisClientNorm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisClientNorm"
        mc:Ignorable="d"
        Title="Tetris Client-Server" Height="600" Width="600"
        MinHeight="600" MinWidth="600"
        FontFamily="Segoe UI Light" FontSize="28">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Back.jpg"></ImageBrush>
        </Grid.Background>

        <Viewbox Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,0,0,20">
            <Canvas x:Name="GameCanvas"
                Background="Black"
                Width="250"
                Height="500"
                ClipToBounds="True"
                Loaded="GameCanvas_OnLoaded"/>
        </Viewbox>
     
        <TextBlock x:Name="ScoreTest"
                   Grid.Row="0"
                   Grid.Column="1"
                   TextAlignment="Center">Score</TextBlock>
        
        <StackPanel Grid.Row="1"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">
            <TextBlock Text="След" TextAlignment="Center"></TextBlock>
            <Image x:Name="NextImage"
                   Margin="20"
                   Width="125"></Image>
        </StackPanel>
        
        <Grid x:Name="GameOverMenu"
                        Background="#CC000000"
                        Grid.RowSpan="2"
                        Grid.ColumnSpan="3"
                        Visibility="Hidden">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Конец игры"
                           FontSize="48"
                           Foreground="AliceBlue"
                           TextAlignment="Center"/>
                <TextBlock Text="Очки: "
                           FontSize="36"
                           Foreground="AliceBlue"
                           TextAlignment="Center"/>
                <Button Content="Играть заново"
                        Background="LightGreen"
                        Margin="0, 20, 0, 0"
                        Padding="5"
                        Click="ButtonBase_OnClick"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
